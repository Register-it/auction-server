scalar DateTime
scalar Currency
scalar URL

enum ImageFormat {
    THUMBNAIL,
    FULLSIZE
}

type Auction {
    expiresOn: DateTime!
    currentPrice: Currency!
    bidsNumber: Int!
}

type Bid {
    user: String!
    amount: Currency!
    dateTime: DateTime!
}

type Item {
    id: ID!
    title: String!
    description: String!
    images(format: ImageFormat = THUMBNAIL, first: Int): [URL!]!
    auction: Auction!
}

type Query {
    items: [Item!]!
}